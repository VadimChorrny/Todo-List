@model TodoList.Models.Tasks;
@{
    ViewData["Title"] = "Todo List";
}

<div>
    <form method="post" asp-action="Create">
        <h2 class="mb-3">Create a new task</h2>
        <div class="form-group row">
            <label asp-for="Title" class="col-4"></label>
            <input asp-for="Title" class="form-control col-8">
            <span asp-validation-for="Title" class="offset-4 text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="Description" class="col-4"></label>
            <input asp-for="Description" class="form-control col-8">
            <span asp-validation-for="Description" class="offset-4 text-danger"></span>
        </div>

        <div class="form-group row">
            <label asp-for="Start" class="col-4"></label>
            <input asp-for="Start" class="form-control col-8">
            <span asp-validation-for="Start" class="offset-4 text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="End" class="col-4"></label>
            <input asp-for="End" class="form-control col-8">
            <span asp-validation-for="End" class="offset-4 text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="Priority">Priority</label>
            <select asp-for="Priority" class="form-control">
                <option selected>Low</option>
                <option selected>Medium</option>
                <option selected>Height</option>
            </select>
            <span asp-validation-for="Priority" class="offset-4 text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-6">
                <input type="submit" class="btn btn-success w-100" value="Create" />
            </div>
            <div class="col-6">
                <a asp-action="Index" class="btn btn-dark w-100">Back</a>
            </div>
        </div>
    </form>
</div>

@* Client Validation *@
@section Scripts
{
    @{
    <partial name="_ValidationScriptsPartial.cshtml" />
 }
}